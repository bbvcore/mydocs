
// 0. editar
/etc/netplan/ fichero yaml
// 1. configurar
network:
  version: 2
  renderer: NetworkManager
  ethernets:
    enp0s8:  # Nombre de la interfaz de red interna
      addresses:
        - 192.168.1.2/24  # IP de la mÃ¡quina en la red interna
      routes:
        - to: default
          via: 192.168.1.1  # IP de la puerta de enlace (router)
      nameservers:
        addresses:
          - 8.8.8.8
          - 8.8.4.4

// 2. Activar
sudo netplan apply
